<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <!-- Bootstrap -->
    <%- include ('../layout/bootstrapcss.ejs') %>
        <link rel="stylesheet" href="./css/index.css">

</head>


<body class="d-flex flex-column justify-items-center align-items-center mt-5">
    <div id="background-img"></div>
    <div class="slide-in-blurred-bottom d-flex flex-column align-items-center w-100">

        <header id="header" class="d-flex flex-column align-items-center">
            <%- include ('../layout/header.ejs') %>
        </header>


        <main>
            <div class="container justify-content-center">
                <div class="row mt-5 mb-5">

                    <% for (project of projects) { %>

                        <div class="row mt-5">
                            <div class="col">
                                <h2>
                                    <%= project.title%>
                                </h2>
                                <h3>Project <%= project.ID %>
                                </h3>
                                <p>
                                    <%= project.description%>
                                </p>

                            </div>




                            <iframe class="responsive-iframe col-4 " width="20%" height="200px"
                            src="./<%= project.ID%>">
                            </iframe>
                        </div>

                        <div class="row mt-1 mb-1"> <a href="./<%= project.ID%>" class="btn btn-dark
                        col-2">
                                See Project
                            </a></div>

                        <div class="mt-5"></div>


                        <%};%>



                </div>
            </div>
    </div>
    </main>
    </div>
</body>
<%- include ('../layout/bootstrap.ejs') %> <%- include ('../layout/jquery.ejs') %>




</html>